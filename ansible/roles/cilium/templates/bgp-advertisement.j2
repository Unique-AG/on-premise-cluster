apiVersion: cilium.io/v2alpha1
kind: CiliumBGPAdvertisement
metadata:
  name: cilium-bgp
  labels:
    advertise: bgp
spec:
  advertisements:
    - advertisementType: "Service"
      service:
        addresses:
          - LoadBalancerIP
      selector:   # We match ALL services with this dummp selector
        matchExpressions:
         - {key: somekey, operator: NotIn, values: ['never-used-value']}